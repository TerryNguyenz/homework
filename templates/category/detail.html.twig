{# templates/category/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Chi tiết danh mục sản phẩm: {{ category.name }}{% endblock %}

{% block body %}
    <h1>Chi tiết danh mục sản phẩm: {{ category.name }}</h1>

    <p>Mô tả: {{ category.description }}</p>

    <h2>Sản phẩm trong danh mục này:</h2>

    <ul>
        {% for product in category.products %}
            <li>
                <a href="{{ path('product_detail', { 'id': product.id }) }}">{{ product.name }}</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('categories') }}">Quay lại danh mục sản phẩm</a>
</div>
{% endblock %}
