{# templates/user/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Danh sách người dùng{% endblock %}

{% block body %}
    <h1>Danh sách người dùng</h1>

    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('user_detail', { 'id': user.id }) }}">{{ user.username }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
