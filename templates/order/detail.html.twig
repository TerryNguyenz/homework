{# templates/order/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Chi tiết đơn đặt hàng: Đơn #{{ order.id }}{% endblock %}

{% block body %}
    <h1>Chi tiết đơn đặt hàng: Đơn #{{ order.id }}</h1>

    <p>Ngày đặt hàng: {{ order.orderDate|date("d/m/Y H:i") }}</p>

    <h2>Sản phẩm trong đơn đặt hàng:</h2>

    <ul>
        {% for item in order.orderItems %}
            <li>{{ item.product.name }} (Số lượng: {{ item.quantity }})</li>
        {% endfor %}
    </ul>

    <p>Tổng cộng: {{ order.totalPrice }} VNĐ</p>

    <a href="{{ path('orders') }}">Quay lại danh sách đơn đặt hàng</a>
</div>
{% endblock %}
